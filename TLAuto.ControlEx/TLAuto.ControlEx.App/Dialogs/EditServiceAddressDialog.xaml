<Window x:Class="TLAuto.ControlEx.App.Dialogs.EditServiceAddressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="工业版通讯服务地址配置" Height="120" Width="300" Style="{StaticResource WindowIconStyleForDialog}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Text="标识符：" VerticalAlignment="Center" Margin="10,0,0,0" />
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="TxtMark" VerticalAlignment="Center" Margin="0,0,10,0" />
        <TextBlock Grid.Row="1" Grid.Column="0" Text="通讯地址：" VerticalAlignment="Center" Margin="10,0,0,0" />
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="TxtServiceAddress" VerticalAlignment="Center" Margin="0,0,10,0" />
        <Button Grid.Row="2" Grid.Column="1" Content="Ok" Width="70" VerticalAlignment="Center" Margin="0,0,10,0" HorizontalAlignment="Right" Click="OkButton_Click" IsDefault="True" />
    </Grid>
</Window>